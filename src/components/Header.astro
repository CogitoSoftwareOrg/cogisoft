---
import { Menu } from "@lucide/astro";

import ThemeController from "./ThemeController.svelte";

interface Props {
  path: string;
}

const links = [
  { href: "/", label: "Home" },
  { href: "/mvp-offer", label: "MVP Offer" },
  { href: "/custom-solution", label: "Custom Solutions" },
  { href: "/partnership", label: "Partnership" },
];

const { path }: Props = Astro.props;
---

<header
  class="fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-white/5 bg-base-100/70 backdrop-blur-md"
>
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a
      href="/"
      class="text-xl font-bold tracking-tighter flex items-center gap-2 hover:opacity-80 transition-opacity"
    >
      <div
        class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center text-primary-content font-mono text-sm"
      >
        CS
      </div>
      <span class="hidden sm:inline">Cogito Software</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-10">
      {
        links.map((link) => (
          <a
            href={link.href}
            class={`text-sm font-medium text-base-content/70 hover:text-primary transition-colors ${path === link.href ? "text-primary" : ""}`}
          >
            {link.label}
          </a>
        ))
      }
    </nav>

    <!-- Actions -->
    <div class="flex items-center gap-4">
      <ThemeController client:load />

      <!-- Mobile Menu Button (Simple implementation) -->
      <div class="md:hidden dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
          <Menu class="w-5 h-5" />
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content mt-3 z-1 p-2 shadow bg-base-100 rounded-box w-52 border border-base-content/10"
        >
          {
            links.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</header>
