---
import { Menu, X, ChevronDown } from "@lucide/astro";

import ThemeController from "$components/ThemeController.svelte";
import Button from "$components/Button.svelte";

interface Props {
  path: string;
}

interface NavLink {
  href?: string;
  label: string;
  children?: { href: string; label: string }[];
}

const links: NavLink[] = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/custom-solution", label: "Custom-Solution" },
  { href: "/labs", label: "Labs" },
  { href: "/blog", label: "Blog" },
];

const { path }: Props = Astro.props;
---

<header
  class="fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-base-content/10 bg-base-100/70 backdrop-blur-md"
>
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a
      href="/"
      class="text-xl font-bold tracking-tighter flex items-center gap-3 hover:opacity-80 transition-opacity"
    >
      <div
        class="size-10 bg-base-200 border border-base-content/15 flex items-center justify-center text-primary font-mono text-lg"
      >
        CS
      </div>
      <div class="hidden sm:flex flex-col leading-non">
        <span class="text-display text-xl font-bold">Cogito Software </span>
        <span class="text-display text-xs text-base-content/50 -mt-1"
          >own your tech</span
        >
      </div>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-10">
      {
        links.map((link) =>
          link.children ? (
            <div class="dropdown dropdown-hover dropdown-bottom">
              <div
                tabindex="0"
                role="button"
                class={`flex items-center gap-1 py-2 text-xs font-medium uppercase tracking-widest transition-colors cursor-pointer ${
                  link.children.some((child) => path === child.href)
                    ? "text-primary"
                    : "text-base-content/70 hover:text-primary"
                }`}
              >
                {link.label}
                <ChevronDown class="w-3 h-3" />
              </div>
              <ul
                tabindex="-1"
                class="dropdown-content menu p-2 shadow-xl bg-base-100 border border-base-content/10 rounded-box w-52 z-1"
              >
                {link.children.map((child) => (
                  <li>
                    <a
                      href={child.href}
                      class={`text-xs uppercase tracking-widest ${
                        path === child.href
                          ? "text-primary font-bold"
                          : "text-base-content/70"
                      }`}
                    >
                      {child.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <a
              href={link.href}
              class={`text-xs font-medium uppercase tracking-widest text-base-content/70 hover:text-primary transition-colors ${path === link.href ? "text-primary" : ""}`}
            >
              {link.label}
            </a>
          )
        )
      }
    </nav>

    <!-- Actions -->
    <div class="flex items-center gap-2 sm:gap-6">
      <div class="hidden md:flex items-center gap-3">
        <ThemeController client:load />
        <a href="/contact" class="btn btn-primary btn-soft">Contact Us</a>
      </div>

      <!-- Mobile Menu Drawer -->
      <div class="md:hidden drawer drawer-end">
        <input id="mobile-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex items-center">
          <label
            for="mobile-drawer"
            class="btn btn-ghost btn-circle hover:bg-base-content/5 transition-colors"
          >
            <Menu class="w-5 h-5" />
          </label>
        </div>
        <div class="drawer-side z-100">
          <label
            for="mobile-drawer"
            aria-label="close sidebar"
            class="drawer-overlay"></label>
          <div
            class="menu p-0 w-[85vw] max-w-80 min-h-full bg-base-100 text-base-content flex flex-col border-l border-base-content/10"
          >
            <!-- Drawer Header -->
            <div
              class="h-16 px-6 flex items-center justify-between border-b border-base-content/5"
            >
              <span
                class="text-[10px] font-bold uppercase tracking-[0.2em] opacity-40"
                >Navigation</span
              >
              <label
                for="mobile-drawer"
                class="btn btn-ghost btn-sm btn-circle opacity-50 hover:opacity-100"
              >
                <X class="w-5 h-5" />
              </label>
            </div>

            <!-- Drawer Links -->
            <nav class="flex-1 px-8 py-12 flex flex-col gap-6">
              {
                links.map((link) =>
                  link.children ? (
                    <div class="collapse collapse-arrow -ml-4 w-[calc(100%+2rem)]">
                      <input type="checkbox" checked="checked" />
                      <div class="collapse-title text-3xl font-bold tracking-tighter text-base-content/40 after:top-1/2! after:h-4! after:w-4!">
                        {link.label}
                      </div>
                      <div class="collapse-content pb-0">
                        <div class="flex flex-col gap-4 pl-4 pt-2 pb-2">
                          {link.children.map((child) => (
                            <a
                              href={child.href}
                              class={`text-2xl font-bold tracking-tighter transition-all hover:translate-x-2 ${
                                path === child.href
                                  ? "text-primary"
                                  : "text-base-content/40 hover:text-base-content"
                              }`}
                            >
                              {child.label}
                            </a>
                          ))}
                        </div>
                      </div>
                    </div>
                  ) : (
                    <a
                      href={link.href}
                      class={`text-3xl font-bold tracking-tighter transition-all hover:translate-x-2 ${
                        path === link.href
                          ? "text-primary"
                          : "text-base-content/40 hover:text-base-content"
                      }`}
                    >
                      {link.label}
                    </a>
                  )
                )
              }
            </nav>

            <!-- Drawer Footer -->
            <div class="p-8 border-t border-base-content/5 space-y-8">
              <div class="flex items-center justify-between">
                <div>
                  <p
                    class="text-[10px] uppercase tracking-widest opacity-30 font-bold mb-3"
                  >
                    Contact
                  </p>
                  <a
                    href="mailto:contact@cogisoft.dev"
                    class="text-sm font-medium hover:text-primary transition-colors block"
                    >contact@cogisoft.dev</a
                  >
                </div>
                <div class="flex flex-col items-center gap-2">
                  <p
                    class="text-[10px] uppercase tracking-widest opacity-30 font-bold"
                  >
                    Theme
                  </p>
                  <ThemeController client:load />
                </div>
              </div>

              <div class="flex flex-col gap-2">
                <span
                  class="text-[10px] uppercase tracking-widest opacity-20 font-bold"
                  >Cogito Software Â© 2025</span
                >
                <span
                  class="text-[10px] uppercase tracking-widest opacity-20 font-bold"
                  >Own your tech</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
