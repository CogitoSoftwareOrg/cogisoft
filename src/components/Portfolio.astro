---
import { Image } from "astro:assets";

import Quizbee from "../assets/quizbee.png";
import Growplex from "../assets/growplex.png";
import Hackseeker from "../assets/hackseeker.png";

const projects = [
  {
    title: "Quizbee Academy",
    description:
      "Educational platform for interactive quizzes and learning paths.",
    tags: [
      // "SvelteKit", "PocketBase", "Stripe"
    ],
    link: "https://quizbee.academy",
    image: Quizbee,
    color: "from-blue-500 to-cyan-400",
  },
  {
    title: "Growplex Dev",
    description:
      "Developer productivity tools and resource management dashboard.",
    tags: [
      // "Astro", "React", "Tailwind"
    ],
    link: "https://growplex.dev",
    image: Growplex,
    color: "from-emerald-500 to-teal-400",
  },
  {
    title: "HackSeeker",
    description:
      "AI-powered platform for finding and validating product ideas.",
    tags: [
      // "Next.js", "Supabase", "AI Integration"
    ],
    link: "https://hackseeker.com",
    image: Hackseeker,
    color: "from-red-500 to-orange-400",
  },
];
---

<section id="portfolio" class="py-20 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">
        Recent <span class="text-primary">Work</span>
      </h2>
      <p class="text-base-content/70 max-w-2xl mx-auto">
        We build production-ready applications that scale. Check out some of our
        recent deployments.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group"
          >
            <div class="glass-card h-full relative overflow-hidden hover:border-primary/30">
              <div class="h-48 overflow-hidden relative border-b border-base-content/10">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                  <span class="badge badge-primary badge-outline bg-base-100">
                    visit â†—
                  </span>
                </div>
              </div>

              <div class="absolute bottom-4 left-4 bg-base-100/90 backdrop-blur px-3 py-1 rounded-full text-xs font-mono">
                View Live
              </div>
              <h3 class="text-2xl font-bold mb-2 group-hover:text-primary transition-colors">
                {project.title}
              </h3>
              <p class="text-base-content/70 mb-6 text-sm leading-relaxed">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 rounded-md bg-base-content/5 text-xs font-mono border border-base-content/10">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
