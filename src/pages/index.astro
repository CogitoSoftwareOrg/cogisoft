---
import {
  Rocket,
  Handshake,
  Cpu,
  ArrowRight,
  Code2,
  Terminal,
  Globe,
} from "@lucide/astro";

import Layout from "../layouts/Layout.astro";
import Portfolio from "../components/Portfolio.astro";
---

<Layout path="/" title="Cogito Software | No Useless Software">
  <main class="relative min-h-screen flex flex-col overflow-hidden">
    <!-- Hero Section -->
    <section class="relative z-10 pt-32 pb-20 lg:pt-48 lg:pb-32">
      <div class="container mx-auto px-6">
        <div class="flex flex-col lg:flex-row items-center gap-16">
          <!-- Left Content -->
          <div class="lg:w-1/2 text-left">
            <div
              class="inline-flex items-center gap-3 px-4 py-2 border-2 border-base-content/10 bg-base-200/35 text-xs uppercase tracking-widest font-mono mb-8 backdrop-blur-sm"
            >
              <span class="led-indicator text-success"></span>
              Available for new projects
            </div>

            <h1
              class="text-5xl lg:text-7xl font-bold mb-8 leading-[1.1] tracking-tight"
            >
              We build <br />
              <span
                class="text-transparent bg-clip-text bg-linear-to-r from-primary to-secondary"
                >useful apps.</span
              >
            </h1>

            <p
              class="text-xl text-base-content/70 mb-10 max-w-xl leading-relaxed font-light"
            >
              Software must be useful, convenient, and functional. We combine
              architectural purity with full code ownership to guarantee
              freedom.
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 mb-10">
              <div class="flex items-center gap-3 text-sm text-base-content/70">
                <span class="led-indicator text-success"></span>
                Useful
              </div>
              <div class="flex items-center gap-3 text-sm text-base-content/70">
                <span class="led-indicator text-secondary"></span>
                Convenient
              </div>
              <div class="flex items-center gap-3 text-sm text-base-content/70">
                <span class="led-indicator text-primary"></span>
                Functional
              </div>
            </div>

            <div class="flex flex-wrap gap-4">
              <a
                href="/contact"
                class="btn btn-primary btn-lg px-8 shadow-lg shadow-primary/20 hover:shadow-primary/40 transition-all duration-300"
              >
                Start a Build
                <ArrowRight class="w-5 h-5 ml-2" />
              </a>
              <a
                href="#offerings"
                class="btn btn-ghost btn-lg px-8 border border-base-content/10 hover:bg-base-content/5"
              >
                Explore Systems
              </a>
            </div>
          </div>

          <!-- Right Visual -->
          <div class="lg:w-1/2 w-full relative">
            <div
              class="overflow-hidden relative z-10 card-terminal transform -rotate-1 hover:rotate-0 transition-transform duration-500"
            >
              <div
                class="flex items-center gap-2 px-6 py-4 border-b-2 border-base-content/10 bg-base-200/25"
              >
                <div class="w-3 h-3 rounded-full bg-error"></div>
                <div class="w-3 h-3 rounded-full bg-warning"></div>
                <div class="w-3 h-3 rounded-full bg-success"></div>
                <div class="ml-auto text-xs text-base-content/40 font-mono">
                  seed.ts
                </div>
              </div>
              <div class="space-y-3 font-mono text-sm p-6">
                <div class="flex gap-4">
                  <span class="text-base-content/30">01</span>
                  <span class="text-secondary">import</span>
                  <span class="text-base-content/80">{"{createNode}"}</span>
                  <span class="text-secondary">from</span>
                  <span class="text-accent">'cogito/software'</span>;
                </div>
                <div class="flex gap-4">
                  <span class="text-base-content/30">02</span>
                </div>
                <div class="flex gap-4">
                  <span class="text-base-content/30">03</span>
                  <span class="text-primary">const</span>
                  <span class="text-warning">node</span>
                  <span class="text-base-content/80">=</span>
                  <span class="text-warning">createNode</span>({}
                  <div class="flex gap-4">
                    <span class="text-base-content/30">04</span>
                    <span class="pl-4 text-base-content/80">localFirst:</span>
                    <span class="text-success">true</span>,
                  </div>
                  <div class="flex gap-4">
                    <span class="text-base-content/30">05</span>
                    <span class="pl-4 text-base-content/80"
                      >offlineCapable:</span
                    >
                    <span class="text-success">true</span>,
                  </div>
                  <div class="flex gap-4">
                    <span class="text-base-content/30">06</span>
                    <span class="pl-4 text-base-content/80">lockIn:</span>
                    <span class="text-error">false</span>
                  </div>
                  <div class="flex gap-4">
                    <span class="text-base-content/30">07</span>
                    <span class="text-base-content/80"></span>);
                  </div>
                </div>
              </div>
            </div>

            <!-- Decorative elements behind code block -->
            <div
              class="absolute -top-10 -right-10 w-32 h-32 bg-secondary/20 rounded-full blur-2xl"
            >
            </div>
            <div
              class="absolute -bottom-10 -left-10 w-40 h-40 bg-primary/20 rounded-full blur-2xl"
            >
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Portfolio Section -->
    <section id="portfolio" class="py-24 relative">
      <div class="container mx-auto px-6">
        <Portfolio />
      </div>
    </section>

    <!-- Competencies Section -->
    <section id="competencies" class="py-24 relative">
      <div class="container mx-auto px-6">
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Core Competencies</h2>
          <div class="h-1 w-20 bg-primary rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Web Apps -->
          <div
            class="group card-riveted p-8 bg-base-200/25 hover:bg-base-200/40 hover:border-primary/20 transition-colors duration-200"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="w-12 h-12 rounded-none bg-base-100/40 border-2 border-base-content/10 flex items-center justify-center text-primary mb-6 group-hover:border-primary/30 transition-colors"
            >
              <Globe class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold mb-3">Web Applications</h3>
            <p class="text-base-content/60 leading-relaxed">
              Complex, responsive web apps built for scale and performance.
            </p>
          </div>

          <!-- Backend -->
          <div
            class="group card-riveted p-8 bg-base-200/25 hover:bg-base-200/40 hover:border-secondary/20 transition-colors duration-200"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="w-12 h-12 rounded-none bg-base-100/40 border-2 border-base-content/10 flex items-center justify-center text-secondary mb-6 group-hover:border-secondary/30 transition-colors"
            >
              <Terminal class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold mb-3">Backend Systems</h3>
            <p class="text-base-content/60 leading-relaxed">
              Robust Node.js & Python architectures designed for high
              throughput.
            </p>
          </div>

          <!-- Integration -->
          <div
            class="group card-riveted p-8 bg-base-200/25 hover:bg-base-200/40 hover:border-accent/20 transition-colors duration-200"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="w-12 h-12 rounded-none bg-base-100/40 border-2 border-base-content/10 flex items-center justify-center text-accent mb-6 group-hover:border-accent/30 transition-colors"
            >
              <Code2 class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold mb-3">System Integration</h3>
            <p class="text-base-content/60 leading-relaxed">
              Unifying diverse systems into one cohesive, valuable product.
            </p>
          </div>

          <!-- AI & ML -->
          <div
            class="group card-riveted p-8 bg-base-200/25 hover:bg-base-200/40 hover:border-info/20 transition-colors duration-200"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="w-12 h-12 rounded-none bg-base-100/40 border-2 border-base-content/10 flex items-center justify-center text-info mb-6 group-hover:border-info/30 transition-colors"
            >
              <Cpu class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold mb-3">AI & ML</h3>
            <p class="text-base-content/60 leading-relaxed">
              Integration of LLMs and self-hosted models for intelligent apps.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Offerings Section -->
    <section id="offerings" class="py-24 relative z-10">
      <div class="container mx-auto px-6">
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Solutions</h2>
          <div class="h-1 w-20 bg-primary rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- MVP Offer -->
          <a
            href="/mvp-offer"
            class="group relative overflow-hidden card-terminal bg-base-100/40 hover:border-primary/30 transition-colors duration-200 p-8"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-primary/5 -mr-8 -mt-8 transition-all group-hover:bg-primary/10"
            >
            </div>
            <div class="relative z-10">
              <div
                class="mb-6 inline-flex p-3 rounded-none bg-base-100/40 border-2 border-base-content/10 text-primary"
              >
                <Rocket class="w-6 h-6" />
              </div>
              <h3 class="text-2xl font-bold mb-2">MVP Offer</h3>
              <div class="text-lg font-medium text-primary mb-4">
                7 Days. $999.
              </div>
              <p class="text-base-content/60 mb-6">
                Rapid fullstack prototype development to validate your
                hypothesis.
              </p>
              <span
                class="text-sm font-bold text-primary flex items-center gap-2 group-hover:gap-3 transition-all"
              >
                Learn more <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>

          <!-- Partnership -->
          <a
            href="/partnership"
            class="group relative overflow-hidden card-terminal bg-base-100/40 hover:border-secondary/30 transition-colors duration-200 p-8"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-secondary/5 -mr-8 -mt-8 transition-all group-hover:bg-secondary/10"
            >
            </div>
            <div class="relative z-10">
              <div
                class="mb-6 inline-flex p-3 rounded-none bg-base-100/40 border-2 border-base-content/10 text-secondary"
              >
                <Handshake class="w-6 h-6" />
              </div>
              <h3 class="text-2xl font-bold mb-2">Partnership</h3>
              <div class="text-lg font-medium text-secondary mb-4">
                We build, you sell.
              </div>
              <p class="text-base-content/60 mb-6">
                Technical partnership for non-technical founders. Lightning
                iterations.
              </p>
              <span
                class="text-sm font-bold text-secondary flex items-center gap-2 group-hover:gap-3 transition-all"
              >
                Learn more <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>

          <!-- Custom Solutions -->

          <a
            href="/custom-solution"
            class="group relative overflow-hidden card-terminal bg-base-100/40 hover:border-accent/30 transition-colors duration-200 p-8"
          >
            <span class="rivet-accent top-3 left-3"></span>
            <span class="rivet-accent top-3 right-3"></span>
            <span class="rivet-accent bottom-3 left-3"></span>
            <span class="rivet-accent bottom-3 right-3"></span>
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-accent/5 -mr-8 -mt-8 transition-all group-hover:bg-accent/10"
            >
            </div>
            <div class="relative z-10">
              <div
                class="mb-6 inline-flex p-3 rounded-none bg-base-100/40 border-2 border-base-content/10 text-accent"
              >
                <Cpu class="w-6 h-6" />
              </div>
              <h3 class="text-2xl font-bold mb-2">Custom Solutions</h3>
              <div class="text-lg font-medium text-accent mb-4">
                Complex Integrations.
              </div>
              <p class="text-base-content/60 mb-6">
                Tailored software solutions for unique business challenges.
              </p>
              <span
                class="text-sm font-bold text-accent flex items-center gap-2 group-hover:gap-3 transition-all"
              >
                Learn more <ArrowRight class="w-4 h-4" />
              </span>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
