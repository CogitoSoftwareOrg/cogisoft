---
import {
  Shield,
  Link2,
  RefreshCw,
  KeyRound,
  LayoutGrid,
  Eye,
  Zap,
  BadgeCheck,
  Paintbrush,
  Globe,
  SearchX,
  FileWarning,
  Link2Off,
  FileText,
  Trello,
  MessageSquare,
  ExternalLink,
  Layout,
  Compass,
  PieChart,
  Video,
  CreditCard,
  FileCheck,
  Target,
  Layers,
  Palette,
} from "@lucide/astro";

import Zero from "../../layouts/Zero.astro";
import WaitlistForm from "../../components/WaitlistForm.svelte";

import "./_styles.css";
---

<Zero
  path="/magiclink"
  title="Magic Link | Cogito Software"
  favicon="/magiclink/favicon.ico"
>
  <main class="min-h-screen flex flex-col">
    <!-- Hero -->
    <section class="hero-wow bg-wow overflow-hidden">
      <div class="container mx-auto px-6 max-w-[1400px]">
        <div class="grid lg:grid-cols-12 gap-12 items-center">
          <!-- Text Content -->
          <div class="lg:col-span-7 animate-in relative z-10">
            <div
              class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-[10px] uppercase tracking-[0.2em] font-bold mb-10"
            >
              <span class="w-2 h-2 rounded-full animate-pulse"></span>
              Magic Link
            </div>

            <h1 class="hero-wow-title">
              One Link.<br />
              <span class="text-magic">Everything.</span>
            </h1>

            <div class="mt-12 max-w-2xl">
              <p class="text-xl md:text-2xl leading-tight font-medium">
                Stop sending scattered links to Drive, Figma, and Trello. Give
                each client one secure “Magic Link” that houses everything.
              </p>

              <div id="waitlist" class="mt-10 hero-wow-form">
                <WaitlistForm
                  accented
                  client:load
                  buttonLabel="Get Started for Free"
                  subtext=""
                  placeholder="Enter your email"
                  experiment="magiclink"
                  intent="hero-wow"
                />
              </div>

              <div class="mt-10 flex flex-wrap gap-6">
                <div
                  class="flex items-center gap-2 font-bold text-xs uppercase tracking-wider"
                >
                  <Shield class="w-4 h-4" />
                  Secure
                </div>
                <div
                  class="flex items-center gap-2 font-bold text-xs uppercase tracking-wider"
                >
                  <KeyRound class="w-4 h-4" />
                  No Logins
                </div>
                <div
                  class="flex items-center gap-2 font-bold text-xs uppercase tracking-wider"
                >
                  <RefreshCw class="w-4 h-4" />
                  Real-time
                </div>
              </div>
            </div>
          </div>

          <!-- Gallery Stack -->
          <div class="lg:col-span-5 relative">
            <div class="hero-wow-gallery">
              <!-- Item 1: Strategy & Discovery -->
              <div
                class="gallery-item gallery-item-1 bg-white p-8 flex flex-col justify-between"
              >
                <div>
                  <div
                    class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center mb-6"
                  >
                    <Compass class="w-8 h-8 text-primary" />
                  </div>
                  <h3 class="text-2xl font-bold text-black mb-1">Strategy</h3>
                  <p
                    class="text-black/40 text-[10px] uppercase tracking-[0.2em] font-bold mb-6"
                  >
                    Phase 01 • Discovery
                  </p>

                  <div class="space-y-3">
                    <div class="flex items-center gap-3">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary/30"></div>
                      <span class="text-xs font-bold text-black/60"
                        >Market Research</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary/30"></div>
                      <span class="text-xs font-bold text-black/60"
                        >User Personas</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary/30"></div>
                      <span class="text-xs font-bold text-black/60"
                        >Competitor Audit</span
                      >
                    </div>
                  </div>
                </div>
                <div
                  class="mt-auto pt-6 border-t border-black/5 flex justify-between items-center"
                >
                  <span class="text-xs font-bold text-black/30"
                    >UPDATED 1H AGO</span
                  >
                  <ExternalLink class="w-5 h-5 text-black/20" />
                </div>
              </div>

              <!-- Item 2: Production & Creative -->
              <div
                class="gallery-item gallery-item-2 bg-[#181818] p-8 flex flex-col justify-between border-black"
              >
                <div>
                  <div
                    class="w-16 h-16 rounded-2xl bg-secondary/20 flex items-center justify-center mb-6"
                  >
                    <Layout class="w-8 h-8 text-secondary" />
                  </div>
                  <h3 class="text-2xl font-bold text-white mb-1">Design</h3>
                  <p
                    class="text-white/30 text-[10px] uppercase tracking-[0.2em] font-bold mb-6"
                  >
                    Phase 02 • Creative
                  </p>

                  <div class="space-y-3">
                    <div class="flex items-center gap-3">
                      <Palette class="w-3.5 h-3.5 text-secondary/50" />
                      <span class="text-xs font-bold text-white/50"
                        >Brand Guidelines</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <Layers class="w-3.5 h-3.5 text-secondary/50" />
                      <span class="text-xs font-bold text-white/50"
                        >UI Kit & Components</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <Target class="w-3.5 h-3.5 text-secondary/50" />
                      <span class="text-xs font-bold text-white/50"
                        >High-Fi Prototypes</span
                      >
                    </div>
                  </div>
                </div>
                <div
                  class="mt-auto pt-6 border-t border-white/5 flex justify-between items-center"
                >
                  <span class="text-xs font-bold text-white/20"
                    >LATEST DRAFTS</span
                  >
                  <ExternalLink class="w-5 h-5 text-white/20" />
                </div>
              </div>

              <!-- Item 3: Main Project Hub -->
              <div
                class="gallery-item gallery-item-3 bg-white p-8 shadow-[0_30px_60px_-15px_rgba(0,0,0,0.3)] border-none"
              >
                <div class="flex items-center gap-4 mb-8">
                  <div
                    class="w-14 h-14 rounded-full bg-wow flex items-center justify-center text-black font-bold text-xl"
                  >
                    GB
                  </div>
                  <div>
                    <h4 class="font-bold text-black text-lg">
                      Global Brand Co
                    </h4>
                    <p
                      class="text-xs text-green-500 font-bold flex items-center gap-1"
                    >
                      <span class="w-1.5 h-1.5 rounded-full bg-green-500"
                      ></span>
                      ACTIVE PORTAL
                    </p>
                  </div>
                </div>
                <div class="space-y-3">
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <Trello class="w-4 h-4 text-accent" />
                      <span class="text-sm font-bold text-black/70"
                        >Project Roadmap</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-accent"></div>
                  </div>
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <PieChart class="w-4 h-4 text-success" />
                      <span class="text-sm font-bold text-black/70"
                        >Ads Performance</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-success"></div>
                  </div>
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <Video class="w-4 h-4 text-primary" />
                      <span class="text-sm font-bold text-black/70"
                        >Weekly Loom Update</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-primary"></div>
                  </div>
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <CreditCard class="w-4 h-4 text-warning" />
                      <span class="text-sm font-bold text-black/70"
                        >Invoices & Billing</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-warning"></div>
                  </div>
                </div>
                <div class="mt-6 pt-4 border-t border-black/5 text-center">
                  <div
                    class="btn btn-sm btn-ghost no-animation text-[10px] font-bold opacity-30"
                  >
                    ONE HUB • ALL SLICES
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem -->
    <section class="py-24 md:py-32 relative overflow-hidden">
      <div class="absolute inset-0 grid-soft opacity-30"></div>
      <div class="container mx-auto px-6 max-w-6xl relative z-10">
        <div class="max-w-3xl mb-16">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-[10px] uppercase tracking-widest font-bold bg-error/10 text-error mb-6"
          >
            The Pain Point
          </div>
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1]">
            Stop playing <span class="text-error">“Find the Link”</span> with your
            clients.
          </h2>
          <p class="mt-6 text-xl text-base-content/70 leading-relaxed">
            Every time you send a loose email, you create a tiny bit of
            friction. Over a project, that friction becomes a wall.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="card-float bg-base-100/40 hover:bg-base-100/60 transition-colors"
          >
            <div
              class="w-12 h-12 rounded-2xl bg-error/10 flex items-center justify-center mb-8"
            >
              <SearchX class="w-6 h-6 text-error" />
            </div>
            <h3 class="text-xl font-bold mb-4">“Can you resend?”</h3>
            <p class="text-base-content/70 leading-relaxed">
              You waste 20% of your week acting as a file retrieval service
              instead of doing billable work.
            </p>
            <div
              class="mt-8 pt-6 border-t border-base-content/5 flex items-center justify-between"
            >
              <span
                class="text-[10px] font-bold text-error/40 uppercase tracking-widest"
                >Efficiency Leak</span
              >
              <div class="w-1.5 h-1.5 rounded-full bg-error animate-pulse">
              </div>
            </div>
          </div>

          <div
            class="card-float bg-base-100/40 hover:bg-base-100/60 transition-colors md:translate-y-8"
          >
            <div
              class="w-12 h-12 rounded-2xl bg-warning/10 flex items-center justify-center mb-8"
            >
              <FileWarning class="w-6 h-6 text-warning" />
            </div>
            <h3 class="text-xl font-bold mb-4">Version Hell</h3>
            <p class="text-base-content/70 leading-relaxed">
              “Is this final_v2.pdf?” Old drafts cause confusion, rework, and
              client frustration.
            </p>
            <div
              class="mt-8 pt-6 border-t border-base-content/5 flex items-center justify-between"
            >
              <span
                class="text-[10px] font-bold text-warning/40 uppercase tracking-widest"
                >Risk Factor</span
              >
              <div class="w-1.5 h-1.5 rounded-full bg-warning"></div>
            </div>
          </div>

          <div
            class="card-float bg-base-100/40 hover:bg-base-100/60 transition-colors"
          >
            <div
              class="w-12 h-12 rounded-2xl bg-error/10 flex items-center justify-center mb-8"
            >
              <Link2Off class="w-6 h-6 text-error" />
            </div>
            <h3 class="text-xl font-bold mb-4">Link Spaghetti</h3>
            <p class="text-base-content/70 leading-relaxed">
              Drive, Figma, Trello, Slack... your client is lost before the
              project even starts.
            </p>
            <div
              class="mt-8 pt-6 border-t border-base-content/5 flex items-center justify-between"
            >
              <span
                class="text-[10px] font-bold text-error/40 uppercase tracking-widest"
                >Total Chaos</span
              >
              <div class="w-1.5 h-1.5 rounded-full bg-error animate-pulse">
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Solution -->
    <section class="py-24 md:py-32 relative">
      <div class="container mx-auto px-6 max-w-6xl">
        <div
          class="flex flex-col md:flex-row md:items-end justify-between gap-8 mb-16"
        >
          <div class="max-w-2xl">
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-[10px] uppercase tracking-widest font-bold bg-primary/10 text-primary mb-6"
            >
              The Solution
            </div>
            <h2
              class="text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1]"
            >
              Simplicity. Security. <span class="text-magic">Elegance.</span>
            </h2>
          </div>
          <p class="text-lg text-base-content/70 max-w-sm">
            We stripped away the noise. What’s left is a beautifully simple
            experience for your client.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
          <!-- Main Feature Card -->
          <div class="md:col-span-8 card-float overflow-hidden group">
            <div
              class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full -translate-y-1/2 translate-x-1/2 blur-3xl group-hover:bg-primary/10 transition-colors"
            >
            </div>
            <div class="relative z-10 flex flex-col h-full">
              <div
                class="w-14 h-14 rounded-2xl bg-primary/15 flex items-center justify-center mb-8"
              >
                <LayoutGrid class="w-7 h-7 text-primary" />
              </div>
              <h3 class="text-3xl font-bold mb-4">A Curated Project Hub</h3>
              <p class="text-lg text-base-content/70 leading-relaxed max-w-md">
                Instead of a messy email chain, give them one polished link that
                houses their files, links, and reports in a beautiful dashboard.
              </p>
              <div class="mt-12 grid grid-cols-2 sm:grid-cols-4 gap-4">
                {
                  ["Files", "Links", "Tasks", "Updates"].map((item) => (
                    <div class="glass-panel py-3 px-4 rounded-xl text-center text-[10px] font-bold uppercase tracking-widest opacity-60">
                      {item}
                    </div>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- Live Sync Card -->
          <div
            class="md:col-span-4 card-float bg-secondary/5 border-secondary/10"
          >
            <div
              class="w-12 h-12 rounded-2xl bg-secondary/20 flex items-center justify-center mb-8"
            >
              <RefreshCw class="w-6 h-6 text-secondary" />
            </div>
            <h3 class="text-2xl font-bold mb-4">Always Live</h3>
            <p class="text-base-content/70 leading-relaxed">
              Update your work on the fly without resending a single email. Your
              client always sees the latest version.
            </p>
          </div>

          <!-- Barrier-free Card -->
          <div class="md:col-span-4 card-float bg-accent/5 border-accent/10">
            <div
              class="w-12 h-12 rounded-2xl bg-accent/20 flex items-center justify-center mb-8"
            >
              <KeyRound class="w-6 h-6 text-accent" />
            </div>
            <h3 class="text-2xl font-bold mb-4">No Logins</h3>
            <p class="text-base-content/70 leading-relaxed">
              No sign-ups. No “Forgot Password” drama. Clients get instantly
              where they need to be.
            </p>
          </div>

          <!-- Control Card -->
          <div class="md:col-span-8 card-float overflow-hidden group">
            <div
              class="absolute top-0 right-0 w-64 h-64 bg-success/5 rounded-full -translate-y-1/2 translate-x-1/2 blur-3xl group-hover:bg-success/10 transition-colors"
            >
            </div>
            <div class="relative z-10 flex flex-col h-full">
              <div
                class="w-14 h-14 rounded-2xl bg-success/15 flex items-center justify-center mb-8"
              >
                <Shield class="w-7 h-7 text-success" />
              </div>
              <div
                class="flex flex-col md:flex-row md:items-center justify-between gap-6"
              >
                <div>
                  <h3 class="text-3xl font-bold mb-4">Total Control</h3>
                  <p
                    class="text-lg text-base-content/70 leading-relaxed max-w-sm"
                  >
                    Revoke access with one click. Set expiry dates or password
                    protection for sensitive data.
                  </p>
                </div>
                <div class="flex gap-2">
                  <div class="w-12 h-6 rounded-full bg-success/20 relative">
                    <div
                      class="absolute right-1 top-1 w-4 h-4 rounded-full bg-success"
                    >
                    </div>
                  </div>
                  <span
                    class="text-[10px] font-bold text-success uppercase tracking-widest"
                    >Active Access</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Admin -->
    <section class="py-24 md:py-32 relative overflow-hidden">
      <div class="absolute inset-0 grid-soft opacity-30"></div>
      <div class="container mx-auto px-6 max-w-6xl relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
          <div class="max-w-xl">
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-[10px] uppercase tracking-widest font-bold bg-secondary/10 text-secondary mb-6"
            >
              The Command Center
            </div>
            <h2
              class="text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1] mb-8"
            >
              Manage 50 clients as easily as <span class="text-magic">one.</span
              >
            </h2>
            <p class="text-xl text-base-content/70 leading-relaxed mb-10">
              Your dedicated Command Center keeps your agency organized. No more
              spreadsheet chaos or "where is that link" moments.
            </p>

            <div class="space-y-6">
              {
                [
                  {
                    icon: LayoutGrid,
                    title: "Bird’s eye view",
                    desc: "See all your client portals in one clean list.",
                    color: "text-primary",
                  },
                  {
                    icon: Eye,
                    title: "View tracking",
                    desc: "Know the exact moment they open the link.",
                    color: "text-accent",
                  },
                  {
                    icon: Zap,
                    title: "One-click updates",
                    desc: "Add reports or files without leaving your dashboard.",
                    color: "text-success",
                  },
                ].map((item) => (
                  <div class="flex items-start gap-4 group">
                    <div
                      class={`w-12 h-12 rounded-xl bg-base-100/60 flex items-center justify-center shrink-0 border border-white/10 group-hover:scale-110 transition-transform`}
                    >
                      <item.icon class={`w-6 h-6 ${item.color}`} />
                    </div>
                    <div>
                      <h4 class="font-bold text-lg mb-1">{item.title}</h4>
                      <p class="text-base-content/60">{item.desc}</p>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          <div class="relative">
            <!-- Mock Admin UI -->
            <div class="card-float p-0 overflow-hidden shadow-2xl rotate-2">
              <div
                class="bg-base-200/80 p-4 border-b border-white/5 flex items-center justify-between"
              >
                <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-error/20"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-warning/20"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-success/20"></div>
                </div>
                <div
                  class="text-[10px] font-bold opacity-30 tracking-widest uppercase"
                >
                  Admin Dashboard
                </div>
              </div>
              <div class="p-6 space-y-4">
                {
                  [
                    {
                      name: "Global Brand Co",
                      status: "Active",
                      color: "bg-success",
                    },
                    {
                      name: "Stellar Labs",
                      status: "Active",
                      color: "bg-success",
                    },
                    {
                      name: "Apex Agency",
                      status: "Reviewing",
                      color: "bg-warning",
                    },
                    {
                      name: "Nebula Systems",
                      status: "Paused",
                      color: "bg-error",
                    },
                  ].map((client) => (
                    <div class="flex items-center justify-between p-3 rounded-xl bg-base-100/40 border border-white/5">
                      <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center text-[10px] font-bold text-primary">
                          {client.name.substring(0, 2).toUpperCase()}
                        </div>
                        <span class="font-bold text-sm">{client.name}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <div
                          class={`w-1.5 h-1.5 rounded-full ${client.color}`}
                        />
                        <span class="text-[10px] font-bold opacity-50 uppercase">
                          {client.status}
                        </span>
                      </div>
                    </div>
                  ))
                }
              </div>
            </div>
            <!-- Decorative elements -->
            <div
              class="absolute -top-12 -right-12 w-32 h-32 bg-primary/20 rounded-full blur-3xl -z-10 animate-pulse"
            >
            </div>
            <div
              class="absolute -bottom-12 -left-12 w-32 h-32 bg-secondary/20 rounded-full blur-3xl -z-10"
            >
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- White-label -->
    <section class="py-24 md:py-32 bg-base-200/30">
      <div class="container mx-auto px-6 max-w-6xl">
        <div class="text-center max-w-3xl mx-auto mb-20">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-[10px] uppercase tracking-widest font-bold bg-accent/10 text-accent mb-6"
          >
            White Label
          </div>
          <h2
            class="text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1] mb-6"
          >
            We stay invisible.<br /><span class="text-magic"
              >You take the credit.</span
            >
          </h2>
          <p class="text-xl text-base-content/70 leading-relaxed">
            Every portal you create is a reflection of your brand. We remove
            ourselves entirely so your clients see YOU, not us.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            [
              {
                icon: Paintbrush,
                title: "Your Brand",
                desc: "Custom logo, colors, and favicon for every portal.",
                color: "text-primary",
              },
              {
                icon: BadgeCheck,
                title: "No Watermarks",
                desc: "No “Powered By” links. Ever. 100% private.",
                color: "text-secondary",
              },
              {
                icon: Globe,
                title: "Custom Domains",
                desc: "Connect your own URL for a seamless experience.",
                color: "text-accent",
              },
              {
                icon: Shield,
                title: "Privacy First",
                desc: "Automatically hidden from Google search results.",
                color: "text-success",
              },
            ].map((feature) => (
              <div class="card-float text-center group">
                <div class="w-16 h-16 rounded-2xl bg-base-100/60 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform shadow-lg">
                  <feature.icon class={`w-8 h-8 ${feature.color}`} />
                </div>
                <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
                <p class="text-sm text-base-content/60 leading-relaxed">
                  {feature.desc}
                </p>
