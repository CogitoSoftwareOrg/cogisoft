---
import {
  Shield,
  Link2,
  RefreshCw,
  KeyRound,
  LayoutGrid,
  Eye,
  Zap,
  BadgeCheck,
  Paintbrush,
  Globe,
  SearchX,
  FileWarning,
  Link2Off,
  FileText,
  Trello,
  MessageSquare,
  ExternalLink,
  Layout,
  Compass,
  PieChart,
  Video,
  CreditCard,
  FileCheck,
  Target,
  Layers,
  Palette,
} from "@lucide/astro";

import Zero from "../../layouts/Zero.astro";
import WaitlistForm from "../../components/WaitlistForm.svelte";

import "./styles.css";
---

<Zero
  path="/magiclink"
  title="Magic Link | Cogito Software"
  favicon="/magiclink/favicon.ico"
>
  <main class="min-h-screen flex flex-col">
    <!-- Hero -->
    <section class="hero-wow bg-wow overflow-hidden">
      <div class="container mx-auto px-6 max-w-[1400px]">
        <div class="grid lg:grid-cols-12 gap-12 items-center">
          <!-- Text Content -->
          <div class="lg:col-span-7 animate-in relative z-10">
            <div
              class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-[10px] uppercase tracking-[0.2em] font-bold mb-10"
            >
              <span class="w-2 h-2 rounded-full animate-pulse"></span>
              Magic Link
            </div>

            <h1 class="hero-wow-title">
              One Link.<br />
              <span class="text-magic">Everything.</span>
            </h1>

            <div class="mt-12 max-w-2xl">
              <p class="text-xl md:text-2xl leading-tight font-medium">
                Stop sending scattered links to Drive, Figma, and Trello. Give
                each client one secure “Magic Link” that houses everything.
              </p>

              <div id="waitlist" class="mt-10 hero-wow-form">
                <WaitlistForm
                  accented
                  client:load
                  buttonLabel="Get Started for Free"
                  subtext=""
                  placeholder="Enter your email"
                  experiment="magiclink"
                  intent="hero-wow"
                />
              </div>

              <div class="mt-10 flex flex-wrap gap-6">
                <div
                  class="flex items-center gap-2 font-bold text-xs uppercase tracking-wider"
                >
                  <Shield class="w-4 h-4" />
                  Secure
                </div>
                <div
                  class="flex items-center gap-2 font-bold text-xs uppercase tracking-wider"
                >
                  <KeyRound class="w-4 h-4" />
                  No Logins
                </div>
                <div
                  class="flex items-center gap-2 font-bold text-xs uppercase tracking-wider"
                >
                  <RefreshCw class="w-4 h-4" />
                  Real-time
                </div>
              </div>
            </div>
          </div>

          <!-- Gallery Stack -->
          <div class="lg:col-span-5 relative">
            <div class="hero-wow-gallery">
              <!-- Item 1: Strategy & Discovery -->
              <div
                class="gallery-item gallery-item-1 bg-white p-8 flex flex-col justify-between"
              >
                <div>
                  <div
                    class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center mb-6"
                  >
                    <Compass class="w-8 h-8 text-primary" />
                  </div>
                  <h3 class="text-2xl font-bold text-black mb-1">Strategy</h3>
                  <p
                    class="text-black/40 text-[10px] uppercase tracking-[0.2em] font-bold mb-6"
                  >
                    Phase 01 • Discovery
                  </p>

                  <div class="space-y-3">
                    <div class="flex items-center gap-3">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary/30"></div>
                      <span class="text-xs font-bold text-black/60"
                        >Market Research</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary/30"></div>
                      <span class="text-xs font-bold text-black/60"
                        >User Personas</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-1.5 h-1.5 rounded-full bg-primary/30"></div>
                      <span class="text-xs font-bold text-black/60"
                        >Competitor Audit</span
                      >
                    </div>
                  </div>
                </div>
                <div
                  class="mt-auto pt-6 border-t border-black/5 flex justify-between items-center"
                >
                  <span class="text-xs font-bold text-black/30"
                    >UPDATED 1H AGO</span
                  >
                  <ExternalLink class="w-5 h-5 text-black/20" />
                </div>
              </div>

              <!-- Item 2: Production & Creative -->
              <div
                class="gallery-item gallery-item-2 bg-[#181818] p-8 flex flex-col justify-between border-black"
              >
                <div>
                  <div
                    class="w-16 h-16 rounded-2xl bg-secondary/20 flex items-center justify-center mb-6"
                  >
                    <Layout class="w-8 h-8 text-secondary" />
                  </div>
                  <h3 class="text-2xl font-bold text-white mb-1">Design</h3>
                  <p
                    class="text-white/30 text-[10px] uppercase tracking-[0.2em] font-bold mb-6"
                  >
                    Phase 02 • Creative
                  </p>

                  <div class="space-y-3">
                    <div class="flex items-center gap-3">
                      <Palette class="w-3.5 h-3.5 text-secondary/50" />
                      <span class="text-xs font-bold text-white/50"
                        >Brand Guidelines</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <Layers class="w-3.5 h-3.5 text-secondary/50" />
                      <span class="text-xs font-bold text-white/50"
                        >UI Kit & Components</span
                      >
                    </div>
                    <div class="flex items-center gap-3">
                      <Target class="w-3.5 h-3.5 text-secondary/50" />
                      <span class="text-xs font-bold text-white/50"
                        >High-Fi Prototypes</span
                      >
                    </div>
                  </div>
                </div>
                <div
                  class="mt-auto pt-6 border-t border-white/5 flex justify-between items-center"
                >
                  <span class="text-xs font-bold text-white/20"
                    >LATEST DRAFTS</span
                  >
                  <ExternalLink class="w-5 h-5 text-white/20" />
                </div>
              </div>

              <!-- Item 3: Main Project Hub -->
              <div
                class="gallery-item gallery-item-3 bg-white p-8 shadow-[0_30px_60px_-15px_rgba(0,0,0,0.3)] border-none"
              >
                <div class="flex items-center gap-4 mb-8">
                  <div
                    class="w-14 h-14 rounded-full bg-wow flex items-center justify-center text-black font-bold text-xl"
                  >
                    GB
                  </div>
                  <div>
                    <h4 class="font-bold text-black text-lg">
                      Global Brand Co
                    </h4>
                    <p
                      class="text-xs text-green-500 font-bold flex items-center gap-1"
                    >
                      <span class="w-1.5 h-1.5 rounded-full bg-green-500"
                      ></span>
                      ACTIVE PORTAL
                    </p>
                  </div>
                </div>
                <div class="space-y-3">
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <Trello class="w-4 h-4 text-accent" />
                      <span class="text-sm font-bold text-black/70"
                        >Project Roadmap</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-accent"></div>
                  </div>
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <PieChart class="w-4 h-4 text-success" />
                      <span class="text-sm font-bold text-black/70"
                        >Ads Performance</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-success"></div>
                  </div>
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <Video class="w-4 h-4 text-primary" />
                      <span class="text-sm font-bold text-black/70"
                        >Weekly Loom Update</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-primary"></div>
                  </div>
                  <div
                    class="h-12 w-full rounded-xl bg-gray-50 flex items-center px-4 justify-between"
                  >
                    <div class="flex items-center gap-3">
                      <CreditCard class="w-4 h-4 text-warning" />
                      <span class="text-sm font-bold text-black/70"
                        >Invoices & Billing</span
                      >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-warning"></div>
                  </div>
                </div>
                <div class="mt-6 pt-4 border-t border-black/5 text-center">
                  <div
                    class="btn btn-sm btn-ghost no-animation text-[10px] font-bold opacity-30"
                  >
                    ONE HUB • ALL SLICES
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem -->
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-6 max-w-6xl">
        <div class="max-w-3xl">
          <h2 class="text-3xl md:text-4xl font-bold leading-tight">
            Stop playing “Find the Link” with your clients.
          </h2>
          <p class="mt-4 text-lg text-base-content/70 leading-relaxed">
            Every time you send a loose email, you create friction.
          </p>
        </div>

        <div class="mt-10 grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="card-float group">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-3">
                <SearchX class="w-5 h-5 text-error" />
                <div class="font-semibold">“Can you resend?”</div>
              </div>
              <span
                class="text-[10px] font-bold text-error/40 uppercase bg-error/5 px-2 py-1 rounded"
                >High Friction</span
              >
            </div>
            <p class="text-base-content/70 text-sm leading-relaxed">
              You waste 20% of your week acting as a file retrieval service
              instead of doing billable work.
            </p>
          </div>

          <div class="card-float group">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-3">
                <FileWarning class="w-5 h-5 text-warning" />
                <div class="font-semibold">Version Hell</div>
              </div>
              <span
                class="text-[10px] font-bold text-warning/40 uppercase bg-warning/5 px-2 py-1 rounded"
                >Risk Factor</span
              >
            </div>
            <p class="text-base-content/70 text-sm leading-relaxed">
              “Is this final_v2.pdf?” Old drafts cause confusion, rework, and
              client frustration.
            </p>
          </div>

          <div class="card-float group">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-3">
                <Link2Off class="w-5 h-5 text-error" />
                <div class="font-semibold">Link Spaghetti</div>
              </div>
              <span
                class="text-[10px] font-bold text-error/40 uppercase bg-error/5 px-2 py-1 rounded"
                >Chaos</span
              >
            </div>
            <p class="text-base-content/70 text-sm leading-relaxed">
              Drive, Figma, Trello, Slack... your client is lost before the
              project even starts.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Solution -->
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-6 max-w-6xl">
        <div class="max-w-3xl">
          <h2 class="text-3xl md:text-4xl font-bold leading-tight">
            Simplicity. Security. Elegance.
          </h2>
          <p class="mt-4 text-lg text-base-content/70 leading-relaxed">
            We stripped away the clunky software, the passwords, and the
            confusion. What’s left is a secure, beautifully simple experience
            for your client.
          </p>
        </div>

        <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-primary/15 flex items-center justify-center shrink-0"
              >
                <LayoutGrid class="w-5 h-5 text-primary" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">A curated hub</div>
                  <span
                    class="text-[10px] font-bold text-primary/50 uppercase tracking-widest"
                    >Organized</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  Instead of a messy email chain, give them one polished link
                  that houses their files, links, and reports in a beautiful
                  dashboard.
                </p>
              </div>
            </div>
          </div>

          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-secondary/15 flex items-center justify-center shrink-0"
              >
                <RefreshCw class="w-5 h-5 text-secondary" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">Always up-to-date</div>
                  <span
                    class="text-[10px] font-bold text-secondary/50 uppercase tracking-widest"
                    >Live Sync</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  Change the files, not the link. Update your work on the fly
                  without resending a single email. Your client always sees the
                  latest.
                </p>
              </div>
            </div>
          </div>

          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-accent/15 flex items-center justify-center shrink-0"
              >
                <KeyRound class="w-5 h-5 text-accent" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">Barrier-free access</div>
                  <span
                    class="text-[10px] font-bold text-accent/50 uppercase tracking-widest"
                    >Seamless</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  No sign-ups. No “Forgot Password” drama. Your clients receive
                  a unique, secure link to get instantly where they need to be.
                </p>
              </div>
            </div>
          </div>

          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-success/15 flex items-center justify-center shrink-0"
              >
                <Shield class="w-5 h-5 text-success" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">Total control</div>
                  <span
                    class="text-[10px] font-bold text-success/50 uppercase tracking-widest"
                    >Secure</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  Need to pause access? Revoke the link with a single click. Set
                  expiry dates or password protection for extra sensitive data.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Admin -->
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-6 max-w-6xl">
        <div class="grid lg:grid-cols-2 gap-10 lg:gap-14 items-start">
          <div class="max-w-xl">
            <h2 class="text-3xl md:text-4xl font-bold leading-tight">
              Manage 50 clients as easily as 1.
            </h2>
            <p class="mt-4 text-lg text-base-content/70 leading-relaxed">
              Your dedicated Command Center keeps your agency organized. No more
              spreadsheet chaos.
            </p>
          </div>

          <div class="card-float">
            <div class="space-y-5">
              <div class="flex items-start gap-4">
                <div
                  class="w-10 h-10 rounded-2xl bg-base-100/40 flex items-center justify-center shrink-0 border border-white/10"
                >
                  <LayoutGrid class="w-5 h-5 text-primary" />
                </div>
                <div>
                  <div class="font-semibold">Bird’s eye view</div>
                  <div class="mt-1 text-base-content/70">
                    See all your client portals in one clean list.
                  </div>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-10 h-10 rounded-2xl bg-base-100/40 flex items-center justify-center shrink-0 border border-white/10"
                >
                  <Link2 class="w-5 h-5 text-secondary" />
                </div>
                <div>
                  <div class="font-semibold">Flexible access</div>
                  <div class="mt-1 text-base-content/70">
                    Generate a private link for a single client, a shared link
                    for a team, or a universal link for everyone.
                  </div>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-10 h-10 rounded-2xl bg-base-100/40 flex items-center justify-center shrink-0 border border-white/10"
                >
                  <Eye class="w-5 h-5 text-accent" />
                </div>
                <div>
                  <div class="font-semibold">View tracking</div>
                  <div class="mt-1 text-base-content/70">
                    Did they actually read the proposal? See the moment they
                    open the link so you know when to follow up.
                  </div>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-10 h-10 rounded-2xl bg-base-100/40 flex items-center justify-center shrink-0 border border-white/10"
                >
                  <Zap class="w-5 h-5 text-success" />
                </div>
                <div>
                  <div class="font-semibold">One-click updates</div>
                  <div class="mt-1 text-base-content/70">
                    Add reports or files to any portal without leaving your
                    dashboard.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- White-label -->
    <section class="py-16 md:py-20">
      <div class="container mx-auto px-6 max-w-6xl">
        <div class="max-w-3xl">
          <h2 class="text-3xl md:text-4xl font-bold leading-tight">
            We stay invisible. You take the credit.
          </h2>
          <p class="mt-4 text-lg text-base-content/70 leading-relaxed">
            We are a true white-label platform. That means when your client
            opens their portal, they see <span class="font-semibold">YOU</span>,
            not us.
          </p>
        </div>

        <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-primary/15 flex items-center justify-center shrink-0"
              >
                <Paintbrush class="w-5 h-5 text-primary" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">Your logo & colors</div>
                  <span
                    class="text-[10px] font-bold text-primary/50 uppercase tracking-widest"
                    >Brandable</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  Custom header, custom background, and custom favicon. Your
                  clients stay within your brand ecosystem.
                </p>
              </div>
            </div>
          </div>

          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-secondary/15 flex items-center justify-center shrink-0"
              >
                <BadgeCheck class="w-5 h-5 text-secondary" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">No “Powered By”</div>
                  <span
                    class="text-[10px] font-bold text-secondary/50 uppercase tracking-widest"
                    >100% Private</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  We remove all references to our software. To your clients,
                  this is your proprietary custom-built portal.
                </p>
              </div>
            </div>
          </div>

          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-accent/15 flex items-center justify-center shrink-0"
              >
                <Globe class="w-5 h-5 text-accent" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">Your custom URL</div>
                  <span
                    class="text-[10px] font-bold text-accent/50 uppercase tracking-widest"
                    >Domains</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  Connect your own domain (e.g., portal.youragency.com) for a
                  truly professional white-label experience.
                </p>
              </div>
            </div>
          </div>

          <div class="card-float">
            <div class="flex items-start gap-4">
              <div
                class="w-11 h-11 rounded-2xl bg-success/15 flex items-center justify-center shrink-0"
              >
                <Shield class="w-5 h-5 text-success" />
              </div>
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div class="font-semibold">Hidden from Google</div>
                  <span
                    class="text-[10px] font-bold text-success/50 uppercase tracking-widest"
                    >Stealth</span
                  >
                </div>
                <p class="mt-2 text-base-content/70 text-sm leading-relaxed">
                  Every portal is automatically set to no-index. Your clients’
                  data and links stay private and invisible.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="pb-20 md:pb-28">
      <div class="container mx-auto px-6 max-w-6xl">
        <div class="card-float overflow-hidden relative">
          <div class="absolute inset-0 grid-soft opacity-70"></div>
          <div class="relative">
            <div
              class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-10"
            >
              <div class="max-w-2xl">
                <h3 class="text-2xl md:text-3xl font-bold">
                  Get Lifetime Access for <span class="text-magic">$59</span>
                </h3>
                <p class="mt-3 text-base-content/70 leading-relaxed">
                  One-time payment. Use it forever. Join the waitlist and we’ll
                  send you the launch link first.
                </p>
                <div
                  class="mt-5 flex flex-wrap gap-3 text-sm text-base-content/60"
                >
                  <div class="glass-panel rounded-full px-4 py-2">
                    White-label by default
                  </div>
                  <div class="glass-panel rounded-full px-4 py-2">
                    Revocable access
                  </div>
                  <div class="glass-panel rounded-full px-4 py-2">
                    Built for agencies
                  </div>
                </div>
              </div>
              <div class="w-full lg:max-w-md">
                <WaitlistForm
                  client:load
                  experiment="magiclink"
                  intent="lifetime"
                  buttonLabel="Lifetime for $59"
                  subtext="No spam. Just launch + early access details."
                  placeholder="Email for early access"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Zero>
