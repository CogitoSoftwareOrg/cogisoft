---
import { Mail } from "@lucide/astro";

import Root from "$layouts/Root.astro";
import ContactForm from "$components/ContactForm.svelte";
---

<Root path="/contact" title="Contact Us | Cogito Software">
  <main class="pt-20 md:pt-32 pb-8 md:pb-16 min-h-screen flex flex-col">
    <div class="container mx-auto px-6 max-w-6xl grow">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Info -->
        <div class="flex flex-col justify-center">
          <div
            class="inline-flex items-center gap-2 text-xs uppercase tracking-widest text-primary mb-4"
          >
            <span class="w-8 h-px bg-primary"></span>
            Get in touch
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
            Let's build something<br />
            <span class="text-primary">you truly own.</span>
          </h1>
          <p class="text-lg text-base-content/70 mb-10 leading-relaxed">
            Whether youâ€™re shipping a product or hardening your infrastructure,
            we help you build systems that stay useful offline, stay
            maintainable for years, and never lock you in.
          </p>

          <div class="space-y-6">
            <a
              href="mailto:contact@cogisoft.dev"
              class="group flex items-center gap-4 p-4 rounded-none bg-base-200/30 border-2 border-base-content/10 hover:border-primary/30 hover:bg-primary/5 transition-all"
            >
              <div
                class="w-12 h-12 rounded-none bg-base-100/40 border-2 border-base-content/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-primary-content transition-all shrink-0"
              >
                <Mail class="w-5 h-5" />
              </div>
              <div>
                <div class="text-xs uppercase tracking-wider opacity-50 mb-1">
                  Email
                </div>
                <div class="font-medium">contact@cogisoft.dev</div>
              </div>
            </a>
          </div>

          <div class="mt-10 pt-8 border-t border-base-content/5">
            <p class="text-sm text-base-content/50">
              We typically respond within 24 hours during business days.
            </p>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="card-terminal bg-base-200/30 p-8 md:p-10">
          <h2 class="text-xl font-bold mb-6 flex items-center gap-3">
            <span class="led-indicator text-success"></span>
            Send us a message
          </h2>
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </main>
</Root>
