---
import Root from "$layouts/Root.astro";
import AboutUs from "$components/AboutUs.astro";
import { ArrowLeft } from "@lucide/astro";
---

<Root path="/about" title="About Us | Cogito Software">
  <main class="relative min-h-screen pt-20 md:pt-32 pb-8 md:pb-16">
    <div class="container mx-auto px-6 mb-12">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-base-content/60 hover:text-primary transition-colors mb-8 group font-mono text-sm uppercase tracking-widest"
      >
        <ArrowLeft
          class="w-4 h-4 group-hover:-translate-x-1 transition-transform"
        />
        Back to Home
      </a>

      <h1 class="text-4xl md:text-6xl font-bold mb-6">Our Team</h1>
      <p class="text-xl text-base-content/60 max-w-2xl font-light">
        We are a small team of engineers and product builders dedicated to
        creating high-utility software that matters.
      </p>
    </div>

    <AboutUs />

    <div class="container mx-auto px-6 mt-24">
      <div class="card-riveted p-12 bg-base-200/25 border-primary/10">
        <span class="rivet-accent top-4 left-4"></span>
        <span class="rivet-accent top-4 right-4"></span>
        <span class="rivet-accent bottom-4 left-4"></span>
        <span class="rivet-accent bottom-4 right-4"></span>

        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6">Our Philosophy</h2>
          <p
            class="text-lg text-base-content/70 leading-relaxed font-light mb-8"
          >
            We believe that software should be a tool for empowerment, not a
            source of dependency. That's why we prioritize full code ownership,
            local-first architectures, and extreme transparency in every project
            we undertake.
          </p>
          <div class="flex-col md:flex-row flex justify-center gap-4">
            <div
              class="px-6 py-3 border border-base-content/10 bg-base-100/40 text-sm font-mono uppercase tracking-tighter"
            >
              No Vendor Lock-in
            </div>
            <div
              class="px-6 py-3 border border-base-content/10 bg-base-100/40 text-sm font-mono uppercase tracking-tighter"
            >
              Pure Architecture
            </div>
            <div
              class="px-6 py-3 border border-base-content/10 bg-base-100/40 text-sm font-mono uppercase tracking-tighter"
            >
              Rapid Delivery
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Root>
