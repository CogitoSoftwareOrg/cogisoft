{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$/*": ["src/*"],
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"],
      "$assets/*": ["src/assets/*"],
      "$layouts/*": ["src/layouts/*"],
      "$styles/*": ["src/styles/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
