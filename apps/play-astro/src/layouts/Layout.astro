---
import "../styles/global.css";
---
<!doctype html>
<html lang="en" data-theme="QUIZBEE_LIGHT">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>

    

    <style>
      /* Small floating toggle button */
      #theme-toggle {
        position: fixed;
        right: 1rem;
        bottom: 1rem;
        z-index: 9999;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 9999px;
        border: none;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        background: var(--color-base-200);
        color: var(--color-base-content);
        cursor: pointer;
      }
      #theme-toggle:focus { outline: 2px solid rgba(0,0,0,0.12); }
    </style>
  </head>
  <body>
    <slot />

    <!-- Theme toggle button injected on every page -->
    <button id="theme-toggle" aria-label="Toggle theme" title="Toggle theme">ðŸŒ“</button>

    <script>
      (function () {
        var btn = document.getElementById('theme-toggle');
        if (!btn) return;
        function getCurrentTheme() {
          try { return document.documentElement.getAttribute('data-theme'); } catch(e) { return null; }
        }
        function setTheme(name: string) {
          try { document.documentElement.setAttribute('data-theme', name); } catch(e) {}
        }
        function saveTheme(name: string) {
          try { localStorage.setItem('cogisoft-theme', name === 'QUIZBEE_DARK' ? 'dark' : 'light'); } catch(e) {}
        }
        btn.addEventListener('click', function () {
          var current = getCurrentTheme();
          var next = current === 'QUIZBEE_DARK' ? 'QUIZBEE_LIGHT' : 'QUIZBEE_DARK';
          setTheme(next);
          saveTheme(next);
        });
      })();
    </script>
  </body>
</html>
